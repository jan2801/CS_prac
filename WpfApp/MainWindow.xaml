<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="WindowClosed">
    <Window.Resources>
        <CollectionViewSource Source="{Binding}" x:Key="LisBox_DataCollection_source" Filter="DataCollection_filter"/>
        <CollectionViewSource Source="{Binding}" x:Key="ListBox_DataOnGrid_View" Filter="DataOnGrid_filter"/>

        

    </Window.Resources>
    <Grid Height="434" VerticalAlignment="Center" HorizontalAlignment="Right" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="169"/>
            <RowDefinition Height="217*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.RowSpan="1" Margin="39,0,0,0">
            <MenuItem Header="File" Height="44" Width="137" RenderTransformOrigin="0.427,0.572">
                <MenuItem Header="New" Click="NewClick"/>
                <MenuItem Header="Open" Click="OpenClick"/>
                <MenuItem Header="Save" Click="SaveClick"/>
            </MenuItem>

            <MenuItem Header="Edit" Width="131" Height="49" RenderTransformOrigin="0.502,0.521">
                <MenuItem Header="Add Defaults" Click="AddDefaultsClick"/>
                <MenuItem Header="Add Default V3DataCollection" Click = "AddDefaultClickV3DataCollection"/>
                <MenuItem Header="Add Default V3DataOnGrid" Click="AddDefaultClickV3DataOnGrid"/>
                <MenuItem Header="Add Element from File" Click="AddV3DataOnGridFromFile"/>
                <MenuItem Header="Remove" Click="RemoveElement"/>
            </MenuItem>
        </Menu>


        <ListBox Grid.Row="1" Name ="lisBox_Main" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="267,29,262,0" />
        <TextBlock Grid.Row="1" Margin="267,0,262,0">V3MainCollection all elements</TextBlock>


        
        <ListBox Name ="lisBox_DataCollection" Margin="543,39,0,0" Grid.Row="2" ItemsSource="{Binding Source={StaticResource LisBox_DataCollection_source}}"/>
        <TextBlock Grid.Row="2"  Margin="543,0,0,183" RenderTransformOrigin="0.506,0.702">Some V3DataCollection elements</TextBlock>
        
        <ListBox Grid.Row="2" Grid.Column="0" Name ="lisBox_DataOnGrid" Margin="0,0,533,0"/>
        
        <TextBlock Grid.Row="2" Text="The biggest distance from zero to points" TextWrapping="Wrap" Margin="267,0,262,0"/>
       
        
        <ListBox Grid.Row="2" Name = "lisBox_details" Margin="538,0,0,0"/>


    </Grid>
</Window>
